<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_dimen_20</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="dialog_textAppearance1">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textColorHighlight">#ff000000</item>
        <item name="android:textColorHint">#ff000000</item>
        <item name="android:textColorLink">#ff000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dialog_button_bar_style">
        <item name="android:background">@null</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="dialog_textAppearance2">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#ffffffff</item>
        <item name="android:textColorHighlight">#ffffffff</item>
        <item name="android:textColorLink">#ffffffff</item>
    </style>

    <style name="dialog_borderless_button_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="pref_dialog_btn_style">
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/dialog_cancel_btn_bg_color</item>
    </style>

    <style name="pref_dialog_ok_btn_style" parent="pref_dialog_btn_style">
        <item name="android:background">@drawable/dialog_ok_btn_bg</item>
        <item name="android:textColor">@color/pref_input_dialog_btn_text_color</item>
    </style>

    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:buttonBarStyle">@style/dialog_button_bar_style</item>
        <item name="android:borderlessButtonStyle">@style/dialog_borderless_button_style</item>
        <item name="android:textAppearance">@style/dialog_textAppearance1</item>
        <item name="android:textAppearanceInverse">@style/dialog_textAppearance2</item>
    </style>

    <style name="no_dim_dialog" parent="dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>